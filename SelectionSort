#include <iostream>

using namespace std;

void SelectionSort(int arr[], int n); //Function for Selection Sort
void display(int arr[], int p); //function to display a given array


int main()
{
	cout<< "Welcome to the implementation of 'Selection Sort' algorithm"<<endl;
        int n;
        cout<< "Please enter number of elements in array"<<endl;
        cin>>n;
        int arr1[n];
        cout<< "Enter the elements"<<endl;
        for(int i=0; i<n; i++)
            cin>>arr1[i];

        cout<< "Array before Sorting: ";
        display(arr1, n);
        SelectionSort(arr1, n);
        cout<< "Array after Sorting: ";
        display(arr1, n);

	return 0;
}

void SelectionSort(int arr[], int n)
{
	for(int i = 0; i<n-1; i++)
    {
       int minn= i;
        for(int j=i+1; j<n; j++)
            if(arr[j] < arr[minn])
        {
            minn = j;
            swapp(&arr[minn], &arr[i]);
        }

    }


};

void display(int arr[], int p)
{
    for(int i=0; i<p; i++)
        cout<< arr[i]<< " ";
    cout<<endl;
}
